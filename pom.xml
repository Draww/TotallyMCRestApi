    <artifactId>TotallyMCRestAPI</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <repositories>
    <repository>
        <id>spigot-repo</id>
        <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
      <repository>
